<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PanButton">
        <attr name="theme_button" format="enum">
            <enum name="primary" value="0" />
            <enum name="secundary" value="1" />
        </attr>
        <attr name="text_button" format="string" />
    </declare-styleable>

    <declare-styleable name="PanSummaryItem">
        <attr name="type_summary_item" format="enum">
            <enum name="primary" value="0" />
            <enum name="secundary" value="1" />
        </attr>
        <attr name="text_key_item" format="string" />
        <attr name="text_value_item" format="string" />
    </declare-styleable>

    <declare-styleable name="PanImageInfoItem">
        <attr name="theme_item" format="enum">
            <enum name="primary" value="0" />
            <enum name="secundary" value="1" />
            <enum name="tertiary" value="2" />
        </attr>
        <attr name="src_item" format="reference" />
        <attr name="text_item" format="string" />
    </declare-styleable>

    <declare-styleable name="PanLabel">
        <attr name="color_label" format="enum">
            <enum name="blue" value="0" />
            <enum name="white" value="1" />
            <enum name="black" value="2" />
        </attr>
        <attr name="style_label" format="enum">
            <enum name="regular" value="0" />
            <enum name="semibold" value="1" />
        </attr>
        <attr name="align_label" format="enum">
            <enum name="start" value="5" />
            <enum name="center" value="4" />
            <enum name="end" value="6" />
        </attr>
        <attr name="text_label" format="string" />
        <attr name="size_label" format="integer" />
    </declare-styleable>

    <declare-styleable name="PanValue">
        <attr name="min_value" format="integer" />
        <attr name="max_value" format="integer" />
    </declare-styleable>

    <declare-styleable name="PanToolbar">
        <attr name="has_close" format="enum">
            <enum name="visible" value="0" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="color_toolbar" format="enum">
            <enum name="black" value="0" />
            <enum name="white" value="1" />
        </attr>
    </declare-styleable>

</resources>